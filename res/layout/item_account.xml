<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/black_default"
    android:dividerPadding="@dimen/default_listview_divide"
    android:orientation="vertical"
    android:padding="@dimen/default_listview_divide"
    android:showDividers="beginning" >

    <TextView
        android:id="@+id/account_name"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:text="@string/item_account_name"
        android:textSize="@dimen/default_item_tv_sp_size" />

    <TextView
        android:id="@+id/update_date"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:text="@string/item_account_update_time"
        android:textSize="@dimen/default_item_tv_sp_size" />

</LinearLayout>